<Window x:Class="Tetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="MainWindow"
        IsEnabled="True"
        Width="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}" 
        Height="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenHeightKey}}"
        Closing="Window_Closing"
        >
    <Grid>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden">
        </Frame>
        <Grid x:Name="popupBackground" Background="Black" Opacity="0.5" Visibility="Collapsed">
        </Grid>
        <Frame x:Name="popupFrame" Visibility="Collapsed" NavigationUIVisibility="Hidden">
        </Frame>
    </Grid>
</Window>