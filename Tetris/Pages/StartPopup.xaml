        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartPopup" IsEnabled="True" 
        Width="1280" 
        Height="720"
        Background="{x:Null}" xmlns:k="http://schemas.microsoft.com/kinect/2013">
