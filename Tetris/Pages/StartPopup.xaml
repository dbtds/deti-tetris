        <k:KinectCircleButton k:KinectCircleButton.Click="PlayButton_Click" Style="{StaticResource PlayButtonStyle}" Foreground="White" Height="300" Width="300" Label="Play" HorizontalAlignment="Center" Name="PlayButton" VerticalAlignment="Center" />
    </Grid>
</Page>
